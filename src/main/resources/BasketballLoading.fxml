<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.BoxBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.final_project.CardSimController">
   <children>
      <ImageView fx:id="basketballLoadingBackground" fitHeight="400.0" fitWidth="612.0" pickOnBounds="true">
         <image>
            <Image url="@basketballcourt.jpeg" />
         </image>
         <effect>
            <BoxBlur />
         </effect>
      </ImageView>
      <Button fx:id="basketballYes" layoutX="195.0" layoutY="226.0" mnemonicParsing="false" onAction="#packToBasketball" text="Yes">
         <font>
            <Font name="HP Simplified" size="12.0" />
         </font>
      </Button>
      <Button fx:id="basketballNo" layoutX="379.0" layoutY="226.0" mnemonicParsing="false" text="No">
         <font>
            <Font name="HP Simplified" size="12.0" />
         </font>
      </Button>
      <Text fx:id="basketballLoadingQuestion" fill="WHITE" layoutX="239.0" layoutY="174.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Are you sure?">
         <font>
            <Font name="HP Simplified" size="24.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
